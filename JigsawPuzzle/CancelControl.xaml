<UserControl x:Class="JigsawPuzzle.CancelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480"   Background="LightBlue" Opacity="0.8">

    <Grid x:Name="LayoutRoot"   Background="LightBlue" Height="100">
        <Button Content="删除" Height="72" HorizontalAlignment="Left" Margin="12,0,0,0" Name="btn_Delete" VerticalAlignment="Top" Width="160" Foreground="Black" BorderBrush="Black" />
        <Button Content="取消" Height="72" HorizontalAlignment="Left" Margin="300,0,0,0" Name="btn_Cance" VerticalAlignment="Top" Width="160" Foreground="Black" BorderBrush="Black" />
    </Grid>
</UserControl>
